<Window x:Class="DataMaintenanceEnhanced.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataMaintenanceEnhanced"
        mc:Ignorable="d"
        Title="Data Maintenance for Products" Height="454" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="321*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgOrders" HorizontalAlignment="Left" Height="238" Margin="11,23,0,0" VerticalAlignment="Top" Width="658" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="btnGet" Content="Get" HorizontalAlignment="Left" Height="33" Margin="545,23,0,0" VerticalAlignment="Top" Width="69" Click="BtnGet_Click" Grid.Column="2"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="33" Margin="545,78,0,0" VerticalAlignment="Top" Width="69" Click="BtnAdd_Click" Grid.Column="2"/>
        <Label x:Name="lblID" Content="ID:" HorizontalAlignment="Left" Height="26" Margin="11,290,0,0" VerticalAlignment="Top" Width="27" Grid.Column="1"/>
        <Label x:Name="lblName" Content="Name:" HorizontalAlignment="Left" Height="26" Margin="116,290,0,0" VerticalAlignment="Top" Width="55" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBlock x:Name="txtStatus" HorizontalAlignment="Left" Height="26" Margin="131,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Grid.Column="2"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="26" Margin="49,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="54" Background="{x:Null}" Grid.Column="1"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Right" Height="26" Margin="0,290,493,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" Background="{x:Null}" Grid.Column="2"/>
        <Label x:Name="lblProductNumber" Content="Product #:" HorizontalAlignment="Left" Height="26" Margin="168,290,0,0" VerticalAlignment="Top" Width="77" Grid.Column="2"/>
        <TextBox x:Name="txtProductNumber" HorizontalAlignment="Left" Height="26" Margin="250,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Background="{x:Null}" Grid.Column="2"/>
        <Label x:Name="lblCategoryId" Content="Category Id:" HorizontalAlignment="Left" Height="26" Margin="11,341,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.635,2.434" Grid.Column="1"/>
        <TextBox x:Name="txtCategoryId" HorizontalAlignment="Left" Height="26" Margin="93,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" Background="{x:Null}" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label x:Name="lblCost" Content="Cost:" HorizontalAlignment="Left" Height="26" Margin="168,336,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="0.635,2.434" Grid.Column="2"/>
        <TextBox x:Name="txtCost" HorizontalAlignment="Left" Height="26" Margin="250,341,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" Background="{x:Null}" Grid.Column="2"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Height="33" Margin="545,137,0,0" VerticalAlignment="Top" Width="69" Click="BtnUpdate_Click" Grid.Column="2"/>

    </Grid>
</Window>
